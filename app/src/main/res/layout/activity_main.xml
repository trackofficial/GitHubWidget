<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/background_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/avatar_form"
                android:layout_gravity="start"
                android:src="@drawable/avatar_placeholder"
                android:scaleType="centerCrop" />


            <TextView
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/tildasans_bold"
                android:textColor="@color/black"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="19sp" />


            <TextView
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/tildasans_medium"
                android:textColor="@color/black_60"
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <EditText
            android:layout_marginTop="4dp"
            android:fontFamily="@font/tildasans_semibold"
            android:background="@color/none"
            android:textColor="@color/black"
            android:textColorHint="@color/black_12"
            android:id="@+id/editUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your ID"
            android:inputType="textPersonName"
            android:layout_marginBottom="12dp"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
                <ImageButton
                    android:background="@drawable/button_shape"
                    android:id="@+id/btnLoad"
                    android:layout_width="76dp"
                    android:layout_height="32dp"></ImageButton>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="upload"
                    android:fontFamily="@font/tildasans_semibold"
                    android:textColor="@color/white"/>
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/tildasans_bold"
            android:textColor="@color/black"
            android:id="@+id/tvTotalContrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contributions"
            android:textSize="19sp" />
        <LinearLayout
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/black_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivActivityGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    </LinearLayout>
</ScrollView>